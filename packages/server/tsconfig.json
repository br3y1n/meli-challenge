{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "moduleResolution": "node",
    "outDir": "./dist",
    "skipLibCheck": true,
    "paths": {
      "@modules/*": ["./src/modules/*"],
      "@/*": ["./src/*"]
    }
  }
}
